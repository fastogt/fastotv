#!/bin/sh
set -e
ln -sf @CPACK_PACKAGING_INSTALL_PREFIX@/@TARGET_INSTALL_DESTINATION@/@PROJECT_NAME_LOWERCASE@ @EXECUTABLE_PATH@
chmod +x @EXECUTABLE_PATH@
cp @CPACK_PACKAGING_INSTALL_PREFIX@/@SHARE_INSTALL_DESTINATION@/applications/@PROJECT_NAME_LOWERCASE@.desktop /usr/share/applications/@PROJECT_NAME_LOWERCASE@.desktop
cp @CPACK_PACKAGING_INSTALL_PREFIX@/@SHARE_INSTALL_DESTINATION@/icons/@PROJECT_NAME_LOWERCASE@.png /usr/share/icons/@PROJECT_NAME_LOWERCASE@.png
